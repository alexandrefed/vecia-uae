---
import { getLocaleData } from '@lib/i18n';
import type { Locale } from '@lib/i18n';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getLocaleData(locale);

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-10 h-10 bg-gradient-primary rounded-lg flex items-center justify-center">
            <span class="text-white font-display font-bold text-xl">V</span>
          </div>
          <span class="font-display font-semibold text-xl">Vecia</span>
        </div>
        <p class="text-gray-600 max-w-md">
          {t.tagline}
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="font-display font-semibold mb-4">{t.nav.solutions}</h3>
        <ul class="space-y-2">
          <li>
            <a href={'/solutions#data-ops'} class="text-gray-600 hover:text-primary transition-colors">
              {t.solutions.dataOps.title}
            </a>
          </li>
          <li>
            <a href={'/solutions#marketing'} class="text-gray-600 hover:text-primary transition-colors">
              {t.solutions.marketing.title}
            </a>
          </li>
          <li>
            <a href={'/solutions#trading'} class="text-gray-600 hover:text-primary transition-colors">
              {t.solutions.trading.title}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h3 class="font-display font-semibold mb-4">Vecia</h3>
        <ul class="space-y-2">
          <li>
            <a href={'/about'} class="text-gray-600 hover:text-primary transition-colors">
              {t.nav.about}
            </a>
          </li>
          <li>
            <a href={'/process'} class="text-gray-600 hover:text-primary transition-colors">
              {t.nav.process}
            </a>
          </li>
          <li>
            <a href={'/contact'} class="text-gray-600 hover:text-primary transition-colors">
              {t.nav.contact}
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-gray-600">
          {t.footer.copyright.replace('2025', currentYear.toString())}
        </p>
        <div class="flex space-x-6">
          <a href={'/privacy'} class="text-sm text-gray-600 hover:text-primary transition-colors">
            {t.footer.privacy}
          </a>
          <a href={'/terms'} class="text-sm text-gray-600 hover:text-primary transition-colors">
            {t.footer.terms}
          </a>
          <button class="text-sm text-gray-600 hover:text-primary transition-colors" data-cc="show-preferencesModal">
            {t.footer.gdpr}
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>